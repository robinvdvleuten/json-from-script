{
  "name": "json-from-script",
  "version": "2.0.0",
  "description": "Tiny JSON parser for your CSP aware script tags",
  "license": "MIT",
  "author": {
    "name": "Robin van der Vleuten",
    "email": "robin@webstronauts.com",
    "url": "https://webstronauts.com"
  },
  "type":"module",
  "source": "index.js",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "unpkg": "dist/index.umd.js",
  "types": "./dist/index.d.ts",
  "exports": { 
    "types": "./dist/index.d.ts",
    "import": "./dist/index.js", 
    "require": "./dist/index.cjs",
    "default": "./dist/index.js"
  },
  "files": [
    "index.d.ts",
    "dist"
  ],
  "scripts": {
    "build": "microbundle",
    "format": "prettier --single-quote --trailing-comma es5 --write '{src,test}/**/*.js'",
    "precommit": "lint-staged",
    "prepublish": "npm run build",
    "release": "standard-version",
    "test": "jest --env=jsdom && bundlesize"
  },
  "lint-staged": {
    "*.js": [
      "prettier --single-quote --trailing-comma es5 --write",
      "git add"
    ]
  },
  "bundlesize": [
    {
      "path": "./dist/*.js",
      "threshold": "300b"
    }
  ],
  "babel": {
    "presets": [
      "env"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/robinvdvleuten/json-from-script.git"
  },
  "bugs": {
    "url": "https://github.com/robinvdvleuten/json-from-script/issues"
  },
  "homepage": "https://github.com/robinvdvleuten/json-from-script#readme",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-jest": "^23.4.0",
    "babel-preset-env": "^1.6.1",
    "bundlesize": "^0.17.0",
    "husky": "^0.14.3",
    "jest": "^23.4.1",
    "jest-in-case": "^1.0.2",
    "lint-staged": "^7.2.0",
    "microbundle": "^0.15.0",
    "prettier": "^1.3.1",
    "standard-version": "^9.0.0"
  }
}
