{
  "name": "json-from-script",
  "version": "1.3.3",
  "description": "Tiny JSON parser for your CSP aware script tags",
  "license": "MIT",
  "author": "Robin van der Vleuten <robin@webstronauts.co>",
  "main": "dist/json-from-script.js",
  "browser": "dist/json-from-script.umd.js",
  "jsnext:main": "index.js",
  "keywords": [
    "json",
    "script",
    "csp",
    "security"
  ],
  "files": [
    "dist",
    "index.js"
  ],
  "scripts": {
    "build": "mkdir -p dist && npm run -s build:cjs && npm run -s build:umd",
    "build:cjs": "rollup -i $npm_package_jsnext_main -f cjs --no-strict | uglifyjs -cm -o $npm_package_main",
    "build:umd": "rollup -i $npm_package_jsnext_main -f umd -n jsonFromScript --no-strict | uglifyjs -cm -o $npm_package_browser",
    "format": "prettier --single-quote --trailing-comma es5 --write '{src,test}/**/*.js'",
    "precommit": "lint-staged --verbose",
    "prepublish": "yarn build",
    "test": "npm-run-all test:**",
    "test:jest": "jest --env=jsdom",
    "test:size": "bundlesize"
  },
  "lint-staged": {
    "*.js": [
      "prettier --single-quote --trailing-comma es5 --write",
      "git add"
    ]
  },
  "bundlesize": [
    {
      "path": "./dist/*.js",
      "threshold": "300b"
    }
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/robinvdvleuten/json-from-script.git"
  },
  "bugs": {
    "url": "https://github.com/robinvdvleuten/json-from-script/issues"
  },
  "homepage": "https://github.com/robinvdvleuten/json-from-script#readme",
  "devDependencies": {
    "bundlesize": "^0.15.3",
    "husky": "^0.13.3",
    "jest": "^20.0.1",
    "jest-in-case": "^1.0.2",
    "lint-staged": "^3.4.1",
    "npm-run-all": "^4.1.1",
    "prettier": "^1.3.1",
    "rollup": "^0.41.6",
    "uglify-js": "^3.0.3"
  }
}
